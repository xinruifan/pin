<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <com.example.fxr.myapplication.releaseInformation.TitleLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.example.fxr.myapplication.releaseInformation.TitleLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TableLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:background="@drawable/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="主题："
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/spiner_them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/them_context"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/p_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="人数："
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/spiner_p_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:entries="@array/num_people"
            android:spinnerMode="dialog" />

    </LinearLayout>
    <LinearLayout
        android:layout_margin="1dp"
        android:background="@drawable/liner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/loaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="地点：" />

            <EditText
                android:id="@+id/local_context"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="输入(点击)定位："
                android:maxLines="2"
                />
        </LinearLayout>

        <Button
            android:id="@+id/button_local"
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:background="@mipmap/local" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:background="@drawable/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <TextView
            android:id="@+id/time0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="date"
            android:text="活动开始时间："/>
        <EditText
            android:id="@+id/time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:background="@drawable/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="date"
            android:text="活动结束时间："/>

        <EditText
            android:id="@+id/time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:background="@drawable/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:text="主题内容"/>

        <EditText
            android:id="@+id/them_content"
            style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="在这里输入文字^_^"
            android:lines="3"
            android:singleLine="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:background="@drawable/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/submit_pic"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/addpicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="25sp"
            android:text="添加图片路径"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:background="@drawable/liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:textSize="50sp"
            android:text="MAP"/>

    </LinearLayout>

</LinearLayout>